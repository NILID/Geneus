%header
  %nav.navbar.navbar-expand-lg.navbar-dark.bg-dark.mb-3
    = link_to root_url, class: 'navbar-brand', title: 'Geneus' do
      = image_tag asset_url('geneus_logo.png'), class: 'img-fluid'
    %button.navbar-toggler{ aria: { controls: 'navbarNav', expanded: 'false', label: 'Toggle navigation' }, data: { target: '#navbarNav', toggle: 'collapse' }, type: 'button' }
      %span.navbar-toggler-icon
    #navbarNav.collapse.navbar-collapse
      %ul.navbar-nav
        %li.nav-item
          = link_to people_path, class: 'nav-link' do
            = fa_icon :users, text: 'Index Of People'
        %li.nav-item
          = link_to new_person_path,  class: 'nav-link' do
            = fa_icon :user_plus, text: 'New Person'

