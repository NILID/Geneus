.container
  .row
    .col-6
      %h2= @person.name

    .col-6.text-right
      %span.dropdown
        = link_to '#' ,class: 'btn btn-dark dropdown-toggle', role: 'button', id: 'dropdownMenuLink', data: { toggle: "dropdown"}, aria: { haspopup: "true", expanded: "false" } do
          Versions
        .dropdown-menu(aria-labelledby="dropdownMenuButton")
          = link_to 'Current version', @person, class: 'dropdown-item'
          = link_to 'View history', versions_person_path(@person), class: 'dropdown-item'

      = link_to 'Edit', edit_person_path(@person), class: 'btn btn-dark'

#tree= render partial: 'tree', locals: { person: @person }

.container.mt-3
  .row
    .col-8
      %h3 Bio
      %p= @person.bio.nil? ? @person.bio : content_tag(:span, 'Empty', class: 'text-muted')

    .col-4
      = image_tag avatar_or_default(@person), class: 'img-fluid img-thumbnail mb-2'
      %h3 Information
      %table.table.table-sm
        %tr
          %th Gender:
          %td= @person.gender

        - if@person.date_of_birth
          %tr
            %th Date of Birth:
            %td= @person.date_of_birth

        - if@person.date_of_death
          %tr
            %th Date of Death:
            %td= @person.date_of_death

        - if @father
          %tr
            %th Father:
            %td= link_to @father.name, @father

        - if @mother
          %tr
            %th Mother:
            %td= link_to @mother.name, @mother
        %tr
          %th Partners:
          %td= render partial: 'people/partnerships', locals: { person: @person }
        %tr
          %th Children:
          %td= render partial: 'children', locals: { person: @person }
