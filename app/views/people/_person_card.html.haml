.card
  = link_to person_card do
    = image_tag avatar_or_default(person_card), class: 'card-img-top'
  .card-body
    %h5.card-title
      = link_to person_card.name, person_card
  .card-footer
    .dropdown
      %a.btn.btn-light.btn-sm{ href: '#', role: 'button', data: { toggle: 'dropdown' }, aria: { haspopup: 'true', expanded: 'false' }}
        = fa_icon 'cog'
      .dropdown-menu
        = link_to 'Edit', edit_person_path(person_card), class: 'dropdown-item'
        = link_to 'Destroy', person_card, data: { confirm: 'Are you sure?'}, method: :delete, class: 'dropdown-item'
