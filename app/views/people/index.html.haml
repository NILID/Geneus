.container-fluid
  .row
    .col
      %h2
        Listing People
        %small.text-muted= pluralize @people.size, 'person'
  .row
    .col
      .card-deck
        - @people.each_with_index do |person, index|
          .card
            = link_to person do
              = image_tag avatar_or_default(person), class: 'card-img-top'
            .card-body
              %h5.card-title= link_to person.name, person
            .card-footer
              %small.text-muted
                = link_to 'Edit', edit_person_path(person)
                = link_to 'Destroy', person, data: { confirm: 'Are you sure?'}, method: :delete
