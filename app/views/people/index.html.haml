.container-fluid
  .row
    .col
      %h2
        Listing People
        %small.text-muted= pluralize @people.size, 'person'
      - @people.each_with_index do |person, index|
        .card.mb-3
          .row.no-gutters
            .col-md-2.col-6
              - if person.avatar.attached?
                = link_to person do
                  = image_tag person.avatar, class: 'img-fluid'
            .col-md-10.col-6
              .card-body
                %h5.card-title= link_to person.name, person
                .card-text
                  = link_to 'Destroy', person, data: { confirm: 'Are you sure?'}, method: :delete
